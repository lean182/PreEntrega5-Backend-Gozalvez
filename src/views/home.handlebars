<div>
  <h1>solucion desafio!!</h1>

  <h3>Lista de productos:</h3>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Código</th>
        <th>Título</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Categoría</th>
        <th>Estado</th>
        <th>Imagen</th>
      </tr>
    </thead>
    <tbody>
      {{#each productos}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.code}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.category}}</td>
        <td>
          {{#if this.status}}
          Activado
          {{else}}
          Desactivado
          {{/if}}
        </td>
        <td>
          {{#if this.thumbnails.length}}
          <a href="{{this.thumbnails.[0]}}" target="_blank">{{this.thumbnails.[0]}}</a>
          {{else}}
          No hay imagen
          {{/if}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>